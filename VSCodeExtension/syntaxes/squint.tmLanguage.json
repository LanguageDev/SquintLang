{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Squint",
	"patterns": [
		{ "include": "#line_comment" },
        { "include": "#keywords" },
        { "include": "#operators" },
		{ "include": "#builtin_types" },
		{ "include": "#strings" },
		{ "include": "#char_literals" },
		{ "include": "#integer_literals" },
		{ "include": "#boolean_constants" },
		{ "include": "#identifiers" }
	],
	"repository": {
        "line_comment": {
			"name": "comment.line.double-slash.squint",
			"begin": "//",
      		"end": "$"
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.squint",
				"match": "\\b(import|if|else|while|for|return|match|func|type|var|val|trait|impl|this|in|goto|break|continue)\\b"
			}]
		},
        "operators": {
            "patterns": [{
                "name": "keyword.operator.squint",
                "match": "\\b(\\+|-|\\*|\\/|\\+=|-=|\\*=|\\/=|>|<|>=|<=|==|!=|and|or|not|cast)\\b"
            }]
        },
        "builtin_types": {
			"patterns": [{
				"name": "storage.type.squint",
				"match": "\\b(unit|bool|string|char|int|uint|int8|int16|int32|int64|uint8|uint16|uint32|uint64)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.squint",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.squint",
					"match": "\\\\."
				}
			]
		},
        "char_literals": {
            "name": "constant.character.squint",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.squint",
					"match": "\\\\."
				}
			]
        },
        "integer_literals": {
			"name": "constant.numeric.integer.decimal.squint",
      		"match": "\\b[0-9]+\\b"
		},
		"identifiers": {
			"name": "entity.name.function.squint",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
		},
		"boolean_constants": {
			"name": "constant.language.boolean.squint",
			"match": "\\b(true|false)\\b"
		}
	},
	"scopeName": "source.squint"
}
